{
  "compileOnSave": true,
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "noImplicitAny": false,
      "removeComments": false,
      "outDir": "./dist",
      "preserveConstEnums": true,
      "sourceMap": true,
      "lib": [
        "es2015"
      ]
  },
  "include": [
      "./**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}